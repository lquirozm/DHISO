<style>
    nav {
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-direction: row-reverse;
        width: 100%;
        padding: 40px 30px;
    }
    nav svg {
        cursor: pointer;
    }
    .logo-nav img {
        height: 100px;
    }
    ul {
        z-index: 3;
        position: absolute;
        width: 100%;
        height: calc(100vh - 229px);
        background: var(--dark-blue);
        top: 181px;
        left: -100%;
        text-align: center;
        transition: all 0.5s;
    }
    ul li {
        display: block;
        margin: 50px;
        line-height: 30px;
    }
    ul li a {
        font-size: 1.7rem;
        font-family: var(--cocogoose-light);
        font-weight: bold;
        color: #fff;
    }
    #check:checked ~ ul {
        left: 0;
    }
    @media only screen and (min-width: 901px) {
        nav {
            margin: 0 auto;
            max-width: 1180px;
            padding: 54px 30px;
            flex-direction: row;
        }
        nav svg {
            display: none;
        }
        .logo-nav img {
            height: 132px;
        }
        ul {
            position: static;
            display: flex;
            gap: 30px;
            width: auto;
            height: auto;
            background: none;
        }
        ul li {
            margin: 0;
        }
        ul li:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease-in-out;
        }
        ul li a:hover {
            color: #b4b4b4;
            transition: all 0.3s ease-in-out;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const ulList = document.getElementById("ulList");
        const btn = document.getElementById("btnMenu");
        const links = document.querySelectorAll("#ulList li a");

        let menuVisible = false;

        btn.addEventListener("click", function () {
            if (!menuVisible) {
                ulList.style.left = "0";
                menuVisible = true;
            } else {
                ulList.style.left = "-100%";
                menuVisible = false;
            }
        });

        links.forEach(function (link) {
            link.addEventListener("click", function () {
                ulList.style.left = "-100%";

                if (menuVisible === true) {
                    menuVisible = false;
                } else {
                    menuVisible = true;
                }
            });
        });
    });
</script>
